---
import Text from '@/components/Text.astro';
---

<section id="our-projects-section">
	<Text as="h2" className="font-48" style="margin-bottom:30px;">Conoce <span>nuestros proyectos</span></Text>

	<div class="content"></div>
</section>

<style>
	#our-projects-section {
		text-align: center;
		padding: 3.6rem 1.5rem 8.8rem;

		@media (max-width: 600px) {
			height: 500px;
		}

		.content {
			background-color: antiquewhite;
			max-width: 1180px;
			width: 100%;
			height: 800px;
			margin-top: 7rem;
			margin-inline: auto;

			@media (max-width: 600px) {
				height: 600px;
			}
		}
	}
</style>
